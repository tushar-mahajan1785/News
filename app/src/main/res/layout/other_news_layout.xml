<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.capternal.news.view_helper.CustomTextView
        android:id="@+id/textView_other_news_header"
        style="@style/news_header_content_style"
        android:text="Other News" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_other_news_background"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.capternal.news.view_helper.CustomTextView
                android:id="@+id/textView_other_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duis aute irure dolor in reprehenderit in voluptate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/view_icon" />

                <com.capternal.news.view_helper.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="241"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/like_icon" />

                <com.capternal.news.view_helper.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp" />

            </LinearLayout>


            <com.capternal.news.view_helper.CustomTextView
                android:id="@+id/textView_other_news_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout_title"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorBlue"
                android:padding="5dp"
                android:text="Shows"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/category_text_size" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>