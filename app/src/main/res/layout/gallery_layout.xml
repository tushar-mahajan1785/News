<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.capternal.news.view_helper.CustomTextView
        android:id="@+id/textView_gallery_header"
        style="@style/news_header_content_style"
        android:text="Awesome Galleries" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_gallery_header">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_gallery"
            android:layout_width="match_parent"
            android:layout_height="400dp"></android.support.v4.view.ViewPager>

        <com.capternal.news.view_helper.CustomTextView
            android:id="@+id/textView_gallery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Ariana Grande"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>